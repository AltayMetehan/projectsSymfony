{# templates/tasklist/list.html.twig #}

<h1>Task Liste</h1>

<ul>
    {% for tasks in tasklists %}
        <li>
        {{ tasks.title }}
        <a href="{{ path('task_delete', {'id': tasks.id}) }}" class="btn btn-danger">Delete</a>
        </li>
    {% endfor %}
</ul>

<a href="{{ path('task_create') }}" class="btn btn-success">Create Task</a>